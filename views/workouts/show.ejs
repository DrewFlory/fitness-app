<!-- SHOW INDIVIDUAL WORKOUT PLAN -->

<a href='/workouts/new' id='add-new-workout-link' class="btn-floating btn-large waves-effect waves-light green hoverable"><i class="material-icons">add</i></a>
<div class="card">
  <!-- <div class="col s4 card-image">
          <img src="http://www.kaylainthecity.com/wp-content/uploads/gym.jpg">

        </div> -->
  <div class="card-content">
    <div class="col s12 m4">
      <h3><%= workout.name %></h3>
      <p>Created by
        <a href='/users/<%= owner._id %>' class="chip hoverable">
            <img src="<%= owner.img %>"
            alt="profile-picture">
            <%= owner.name %>
        </a>
      </p>
    </div>
    <div class="col s12 m4">
      <h1>
        <img src="/images/d.png" alt="dumbbell" width="50px"> <%= workout.upvotes %></h1>
        <br>

        <% if( user.favorites.includes( workout._id.toString() ) ){ %>
          <a href="/workouts/<%= workout._id %>/like"
             class='btn-floating btn-large waves-effect waves-light red hoverable tooltipped'
             data-position="bottom" data-delay="50" data-tooltip="Remove from favorites">
            <i class="material-icons">thumb_down</i></a>

        <% }else{ %>
          <a href="/workouts/<%= workout._id %>/like"
             class='btn-floating btn-large waves-effect waves-light green hoverable tooltipped'
             data-position="bottom" data-delay="50" data-tooltip="Like and add to favorites">
            <i class="material-icons">thumb_up</i></a>
        <% } %>
        <a href="/follow/<%= workout._id %>"
           class='btn-floating btn-large waves-effect waves-light blue hoverable tooltipped'
           data-position="bottom" data-delay="50" data-tooltip="Follow">
          <i class="material-icons">turned_in_not</i></a>
    </div>
    <div class="col s12 m4">
      <p><%= workout.description %></p>

    </div>

  </div>
  <div class="card-tabs">
    <ul class="tabs tabs-fixed-width">
      <li class="tab"><a href="#tab0" class="active" >Sunday</a></li>
      <li class="tab"><a href="#tab1">Monday</a></li>
      <li class="tab"><a href="#tab2">Tuesday</a></li>
      <li class="tab"><a href="#tab3">Wednesday</a></li>
      <li class="tab"><a href="#tab4">Thursday</a></li>
      <li class="tab"><a href="#tab5">Friday</a></li>
      <li class="tab"><a href="#tab6">Saturday</a></li>
    </ul>
  </div>
  <div class="card-content grey lighten-4">
    <div id='tab0' class='col s12'></div>
    <div id='tab1' class='col s12'></div>
    <div id='tab2' class='col s12'></div>
    <div id='tab3' class='col s12'></div>
    <div id='tab4' class='col s12'></div>
    <div id='tab5' class='col s12'></div>
    <div id='tab6' class='col s12'></div>

  </div>

</div>

<% workout.plan.forEach( (p,i)=>{ %>
  <div class='exercise' data-day='<%= p.day %>' hidden>

    <a href="/exercises/<%= p.exercise %>"><%= p.exercise %></a>
    <span class='chip'> <%= p.reps %> REPS</span>
  </div>
<% }) %>


<script type="text/javascript">
    let exercises = $('.exercise');
    for(let i =0; i < exercises.length; i++){
      const day = $(exercises[i]).attr('data-day');
      $(exercises[i]).show().appendTo(`#tab${day}`);
    }

</script>
